<h1>Modelos de Produtos</h1>

<%= link_to 'Cadastrar Modelo de Produto', new_product_model_path %>

<% @product_models.each do |pm| %>
  <h2><%= link_to pm.name, pm %></h2>
  <dl>
    <dt>SKU</dt>
    <dd><%= pm.sku %></dd>
    <dt>Fornecedor</dt>
    <dd><%= pm.supplier.brand_name %></dd>
  </dl>
<% end %>

<% if @product_models.empty? %>
  <p>Nenhum modelo de produto cadastrado.</p>
<% end %>

<%= link_to 'Voltar', root_path %>