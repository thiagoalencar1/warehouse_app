<%= form_with(model: @product_model) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>

  <div>
    <%= f.label :width %>
    <%= f.number_field :width %>
  </div>

  <div>
    <%= f.label :height %>
    <%= f.number_field :height %>
  </div>

  <div>
    <%= f.label :depth %>
    <%= f.number_field :depth %>
  </div>

  <div>
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </div>

  <div>
    <%= f.label :supplier %>
    <%= f.collection_select :supplier_id, Supplier.all.order(:brand_name), :id, :brand_name %>
  </div>

  <div>
    <%= f.submit 'Enviar' %>
  </div>
  
<% end %>

<%= link_to 'Voltar', product_models_path %>

