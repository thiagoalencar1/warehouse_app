<% if @supplier.errors.any? %>
  <p>Verifique os erros abaixo: </p>
  <ul>
  <% @supplier.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: @supplier) do |f| %>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>

  <div>
    <%= f.label :brand_name %>
    <%= f.text_field :brand_name %>
  </div>

  <div>
    <%= f.label :nif %>
    <%= f.number_field :nif %>
  </div>

  <div>
    <%= f.label :full_address %>
    <%= f.text_field :full_address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state, maxlength: 2, size: 2 %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :contact_number %>
    <%= f.number_field :contact_number %>
  </div>

  <div>
    <%= f.submit 'Enviar' %>
  </div>

<% end %>

<%= link_to 'Voltar', suppliers_path %>