<% if @warehouse.errors.any? %>
  <p>Verifique os erros abaixo: </p>
  <ul>
  <% @warehouse.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: @warehouse) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

   <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

   <div>
    <%= f.label :code %>
    <%= f.text_field :code, maxlength: 3, size: 3 %>
  </div>

   <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

   <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

   <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

   <div>
    <%= f.label :area %>
    <%= f.number_field :area %>
  </div>

  <div>
    <%= f.submit 'Enviar' %>
  </div>


<% end %>